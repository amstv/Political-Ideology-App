<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.christophercorbett.politicalquiz.MainActivity">


    <TextView android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Question"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:orientation="vertical">

        <RadioButton android:id="@+id/answer1"
            android:text="@string/sagree"
            android:textColor="#39add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="15sp"
            android:onClick="" />

        <RadioButton android:id="@+id/answer2"
            android:text="@string/agree"
            android:textColor="#39add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="15sp"
            android:onClick="" />

        <RadioButton android:id="@+id/answer3"
            android:text="@string/neutral"
            android:textColor="#39add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="15sp"
            android:onClick="" />

        <RadioButton android:id="@+id/answer4"
            android:text="@string/disagree"
            android:textColor="#39add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="15sp"
            android:onClick="" />

        <RadioButton android:id="@+id/answer5"
            android:text="@string/sdisagree"
            android:textColor="#39add1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:textSize="15sp"
            android:onClick="" />

    </RadioGroup>

    <com.jjoe64.graphview.GraphView
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:id="@+id/graph"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="19dp"
        
        />

    <TextView android:id="@+id/auth_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:text="@string/auth"/>

    <TextView android:id="@+id/lib_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/lib"/>

    <TextView android:id="@+id/com_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/graph"

        android:text="@string/com"/>

    <TextView android:id="@+id/con_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/graph"
        android:layout_centerVertical="true"
        android:text="@string/con"
        />




</RelativeLayout>